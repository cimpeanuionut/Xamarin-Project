<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
             Padding="10"
             Title="APIUsers" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMobile.APIUsers">

    <StackLayout>        
        <ListView x:Name="usersListView" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell >
                        <StackLayout Orientation="Vertical" Spacing="4" Padding="5" >
                            <Label Text="{Binding Name}"  TextColor="Black" FontAttributes="Bold"   />                  
                            <Label Text="{Binding Email}" TextColor="Black" FontAttributes="Italic" />
                            <Label Text="{Binding Phone}" TextColor="Black"  />                             
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>                
            </ListView.ItemTemplate>
        </ListView>     
    </StackLayout>
  
</ContentPage>